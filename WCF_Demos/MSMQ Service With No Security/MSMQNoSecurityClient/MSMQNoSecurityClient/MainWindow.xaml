        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize">
    <Grid Background="#E6FFFF87">
        <Button Content="Send!" Height="35" HorizontalAlignment="Right" Margin="0,0,156,96" Name="buttonSendMsg" VerticalAlignment="Bottom" Width="141" Foreground="#FF0FA39A" FontFamily="Arial" FontWeight="Bold" Click="buttonSendMsg_Click" />
        <TextBox Height="27" HorizontalAlignment="Right" Margin="0,151,156,0" Name="textBox1" VerticalAlignment="Top" Width="141" AcceptsReturn="True" FontWeight="Bold" FontFamily="Arial" Foreground="Red" />
        <Label Content="Enter Your Message:" Height="28" HorizontalAlignment="Left" Margin="70,150,0,0" Name="label1" VerticalAlignment="Top" Width="130" FontWeight="Bold" FontFamily="Arial" />
    </Grid>
</Window>
