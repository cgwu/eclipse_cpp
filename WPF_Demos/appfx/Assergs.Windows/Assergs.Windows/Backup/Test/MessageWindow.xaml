<aw:ToolWindow
	x:Class="Assergs.Windows.Tests.MessageWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:aw="clr-namespace:Assergs.Windows;assembly=Assergs.Windows"
	Header="Message"
	Icon="Resources/Icons/16x16/Exit16.png"
	Style="{DynamicResource {x:Type aw:ToolWindow}}"
	>

	<Grid Width="300">
		<Grid.RowDefinitions>
			<RowDefinition Height="80" />
			<RowDefinition Height="45" />
		</Grid.RowDefinitions>

		<TextBlock Foreground="#FFE3EFFF" FontSize="14"
			HorizontalAlignment="Center" VerticalAlignment="Center">Hello.</TextBlock>

		<Button Name="btn1" Grid.Row="1" Width="75" FontSize="12" Command="aw:ToolWindow.CloseCommand"
			HorizontalAlignment="Center" VerticalAlignment="Center">Ok</Button>

	</Grid>		

</aw:ToolWindow>
